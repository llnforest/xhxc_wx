/* pages/user/user.wxss */
page{
  background:#efefef;
}
/* 顶部 */
.top-area{
  position:relative;
}
.top-bg{
  position:absolute;
}
.user-info{
  padding:30rpx 0rpx 30rpx 260rpx;
  position:relative;
  height:160rpx;
  margin-top:65rpx;
}
.nick-name{
  color:#fff;
  line-height:60rpx;
  font-weight: 700;
  font-size:40rpx;
}
.user-level{
  color:#e9e9e9;
  line-height:40rpx;
}
.head-img{
  width:160rpx;
  height:160rpx;
  border-radius:50%;
  left:80rpx;
  position:absolute;
  top:0;
  border:1px solid #ddd;
}
.vip-area{
  width:90%;
  margin-top:60rpx;
  margin:60rpx 5%;
  height:120rpx;
  background:#fff;
  position: relative;
  border-radius:20rpx;
  box-shadow:0 1rpx 20rpx  2rpx rgba(1, 1, 1, 0.1);
  padding-left:115rpx;
  font-size:32rpx;
  font-weight: 700;
  line-height:120rpx;
}
.zuanshi-img{
  width:100rpx;
  position:absolute;
  top:0;
  bottom:0;
  margin:auto;
  left:15rpx;
}
.tixing{
  font-weight: 100;
  float:right;
  color:#666;
  width:67%;
  position:relative;
}
.ti-bg{
  height: 120rpx;
  position: absolute;
  top: 0;
  width: 430rpx;
  right: 0;

}
.go-gift{
  text-align: center;
  color: #fff;
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  border-radius: 25rpx;
  margin-right: 15rpx;
  float: right;
  margin-top: 35rpx;

}
.get-more{
  color:#666;
  line-height:100rpx;
  float:right;
  margin-right:50rpx;
  width:120rpx;
  text-align:right;
}
.status-wrap{
  width:95%;
  margin:0 auto;
  padding:30rpx 0;
}
.status-item{
  width:17%;
  margin:0 4%;
  float:left;
  position:relative;
}
.item-img{
  width:52rpx;
  height:52rpx;
  margin:5rpx auto;
}
.item-text{
  margin-top:10rpx;
  font-size:24rpx;
  text-align:center;
}
.dot{
  position:absolute;
  top:-10rpx;
  right:0;
  width:36rpx;
  height:36rpx;
  border-radius:50%;
  color:#fff;
  text-align:center;
  font-size:24rpx;
}
/* 列表部分 */
.order-item{
  position: relative;
  padding-left:200rpx;
  border-bottom: 1px solid #e3eaef;
  box-shadow: 0 1px 2px 0 rgba(101,129,156,.08);
  height:102rpx;
}
.order-item:last-child{
  border:none;
}
.item-name{
  position:absolute;
  left:2.5%;
  line-height: 100rpx;
  font-weight:700;
}


.common-right-icon{
  width:15rpx;
  height:30rpx;
  margin:auto;
  top:0;
  bottom:0;
  right:20rpx;
  position: absolute;
}