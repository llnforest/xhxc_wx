/* pages/user/user.wxss */
page{
  background:#efefef;
}
/* 顶部 */
.top-area{
  position:relative;
  
padding: 80rpx 0;

}
.user-info{
  padding:30rpx 0rpx 30rpx 260rpx;
  position:relative;
  height:160rpx;
}
.nick-name{
  color:#fff;
  line-height:60rpx;
  font-weight: 700;
  font-size:30rpx;
}
.user-level{
  color:#e9e9e9;
  line-height:40rpx;
}
.head-img{
  width:160rpx;
  height:160rpx;
  border-radius:50%;
  left:80rpx;
  position:absolute;
  top:0;
  border:1px solid #ddd;
  overflow: hidden;

}

/* 列表部分 */
.order-item{
  position: relative;
  padding-left:200rpx;
  border-bottom: 1px solid #e3eaef;
  box-shadow: 0 1px 2px 0 rgba(101,129,156,.08);
  height:102rpx;
}
.order-item:last-child{
  border:none;
}
.item-name{
  position:absolute;
  left:2.5%;
  line-height: 100rpx;
  font-weight:700;
}

.common-right-icon{
  width:28rpx;
  height:35rpx;
  margin:auto;
  top:0;
  bottom:0;
  right:20rpx;
  position: absolute;
}